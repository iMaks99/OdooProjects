<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mail_activity_title_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_margin="4dp" >

                <TextView
                    android:id="@+id/mail_activity_title_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="hello" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/mail_activity_count_tv"
                    android:text="1255"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

            <View android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#eee" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mail_activity_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/mail_activity_type_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mail_activity_type_tv"
            app:srcCompat="@drawable/ic_round_call_24px" />

        <TextView
            android:id="@+id/mail_activity_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/mail_activity_icon_iv"
            app:layout_constraintTop_toBottomOf="@+id/mail_activity_title_ll"
            tools:text="Call" />

        <ImageView
            android:id="@+id/mail_activity_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mail_activity_type_tv"
            app:layout_constraintStart_toEndOf="@+id/mail_activity_type_tv"
            app:layout_constraintTop_toTopOf="@+id/mail_activity_type_tv"
            app:srcCompat="@drawable/ic_round_create_24px" />

        <ImageView
            android:id="@+id/mail_activity_markdone_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mail_activity_title_ll"
            app:srcCompat="@drawable/ic_round_check_circle_24px" />

        <ImageView
            android:id="@+id/mail_activity_time_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mail_activity_icon_iv"
            app:srcCompat="@drawable/ic_outline_access_time_24px" />

        <TextView
            android:id="@+id/mail_activity_deadline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:text="Yesterday"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mail_activity_time_icon_iv"
            app:layout_constraintTop_toBottomOf="@+id/mail_activity_type_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>