<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/project_task_delete_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projcet_task_edit_tv"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24px" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/projcet_task_edit_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_task_share_tv"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24px" />

    <TextView
        android:id="@+id/project_task_share_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Share Task"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/project_task_set_cover_image_tv" />

    <TextView
        android:id="@+id/project_task_set_cover_image_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Set Cover Image"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/project_task_delete_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Delete Task"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/projcet_task_edit_tv" />

    <TextView
        android:id="@+id/projcet_task_edit_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Edit Task"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/project_task_share_tv" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/project_task_share_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_task_set_cover_image_tv"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24px" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/project_task_set_cover_image_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24px" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_task_delete_tv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view6"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:background="#050861" />

            <View
                android:id="@+id/view11"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:background="#2196F3" />

            <View
                android:id="@+id/view12"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:background="#8BC34A" />

            <View
                android:id="@+id/view13"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:background="#8BC34A" />

            <View
                android:id="@+id/view14"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#00861F" />

            <View
                android:id="@+id/view9"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#001F1F" />

            <View
                android:id="@+id/view10"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#00861F" />

            <View
                android:id="@+id/view7"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#861F1F" />

            <View
                android:id="@+id/view8"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#00861F" />

            <View
                android:id="@+id/view5"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:layout_marginEnd="4dp"
                android:background="#008F1F" />

            <View
                android:id="@+id/view4"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:background="#041F1F" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>